<section class="groups h-1/2 w-[10%]">
    <ul class="flex gap-y-12 py-7 gap-x-6 w-full h-max max-h-[130%] flex-wrap justify-center overflow-auto mt-16"
        id="rooms">
        <% for (const room of rooms) {%>
            <li class="cursor-pointer rounded-full w-12 h-12">
                <section class="relative flex justify-center items-center">
                    <div class="group flex justify-center transition-all rounded-full bg-transparent">
                        <p
                            class="w-12 h-12 grid place-items-center rounded-full font-bold text-2xl border border-white cursor-pointer capitalize">
                            <%=room.slice(0,1)%>
                        </p>
                        <span
                            class="absolute opacity-0 group-hover:opacity-100 group-hover:-translate-y-7 duration-500 text-sm font-bold">
                            <%=room%>
                        </span>
                        <div id="greendot" class="w-3 h-3 bg-green-400 rounded-full absolute right-0 opacity-0"></div>
                    </div>
                </section>
            </li>
            <%}%>
    </ul>
</section>



