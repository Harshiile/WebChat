<form id="joinroom"
    class="w-max h-max flex flex-col gap-y-5 items-center border border-white-300 rounded-3xl py-4 px-16 absolute right-0 top-24 translate-x-[100%] transition-all duration-200 pr-32">
    <div class="goToRightBtn absolute top-5 left-2 w-8">
        <img src="/Assets/forward.svg" class="cursor-pointer">
    </div>
    <p class="font-bold text-2xl sm:text-3xl">Join Room</p>
    <div class="name sm:w-max">
        <input type="text"
            class="px-4 py-1 border border-gray-700 sm:text-lg rounded-lg w-full focus:border-blue-700 hover:border-blue-500 transition-all duration-200 bg-transparent"
            placeholder="Name" id="name" required>
    </div>
    <div>
        <p class="mb-12 text-red-600 ml-4" id="joinerror"></p>
    </div>
    <input type="submit" value="Join"
        class="bg-[#32aa34] px-6 py-2 rounded-xl absolute bottom-4 right-16 cursor-pointer font-bold text-md sm:text-lg">
</form>